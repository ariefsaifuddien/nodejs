<h1 class="mb-3">Contact Page</h1>

<div class="row">
  <div class="col-lg-6">
    <table class="table">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length === 0) { %>
        <tr>
          <td colspan="3">
            <div class="alert alert-dark" role="alert">
              <strong>Contact kosong!</strong>
            </div>
          </td>
        </tr>
        <% } %>
        <% contacts.forEach((contact,i) => { %>
        <tr>
          <td scope="row"><%= i + 1 %></td>
          <td><%= contact.nama %></td>
          <td>
            <a href="/contact/<%= contact.nama %>" class="btn badge bg-secondary">Detail</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>